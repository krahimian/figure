@import 'nib'

.progress
    position relative
    height 4px
    width 100%
    .position
        position relative
        opacity 0.2
        background #ffd300
        height 100%
    .today
        absolute top -6px
        height 10px
        width 1px
        background #ccc

.budget[title]:before
    absolute top -14px left
    content attr(title)
    line-height 14px
    font-size 12px
    color #999