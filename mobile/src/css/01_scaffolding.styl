@import 'nib'

body
    padding 10px
    font-family 'Helvetica Neue',Helvetica,Arial,'Lucida Grande',sans-serif

.row:empty
    display none

.box
    position relative
    font-weight 300
    border 1px solid #444
    border-radius 2px
    text-align center
    line-height 50px
    font-size 20px
    margin-bottom 20px
    padding-top 25px
    small
        display block
        color white
        font-size 11px
        line-height 15px
        &:last-child
            margin-bottom 10px

.box[title]:before
    absolute top left
    content attr(title)
    line-height 14px
    font-size 14px
    padding 10px
    color #999

.positive
    color #18ff00
.negative
    color #f57070